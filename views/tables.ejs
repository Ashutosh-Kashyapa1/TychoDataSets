               $("#uploadForm").submit(function (event) {
                    event.preventDefault();
                    var formData = new FormData(this);
                    $.ajax({
                         url: "/importuser",
                         type: "POST",
                         data: formData,
                         contentType: false,
                         processData: false,
                         success: function (response) {
                              $("#uploadMessage").text(response.message).removeClass('text-danger').addClass('text-success');
                         },
                         error: function (xhr) {
                              let response = xhr.responseJSON;
                              if (response && response.message) {
                                   $("#uploadMessage").text(response.message).removeClass('text-success').addClass('text-danger');
                              } else {
                                   $("#uploadMessage").text("File upload failed.").removeClass('text-success').addClass('text-danger');
                              }
                         }
                    });
               });
          });


     </script>

     <script>
          $(document).on("click", ".delete-btn", function (e) {
               e.preventDefault();

               var id = $(this).data("id");
               console.log("Deleting ID:", id);

               Swal.fire({
                    title: "Are you sure?",
                    text: "This action cannot be undone!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    cancelButtonText: "Cancel"
               }).then((result) => {
                    if (result.isConfirmed) {
                         $.ajax({
                              url: `/delete/${id}`,
                              type: "DELETE",
                              success: function (data) {
                                   Swal.fire({
                                        icon: "success",
                                        text: "Data deleted successfully!",
                                   });
                                   setTimeout(function () {
                                        location.reload();
                                   }, 1000);
                              },
